---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Shows - Tommy Zugell';

const shows = [
  { month: 'JUL', day: '12', location: 'Pittsburgh, PA', details: '[Early Show]' },
  { month: 'JUL', day: '13', location: 'Columbus, OH', details: '' },
  { month: 'JUL', day: '14', location: 'Cleveland, OH', details: '[Late Show]' },
  { month: 'AUG', day: '01', location: 'New York, NY', details: '' },
  { month: 'AUG', day: '02', location: 'Boston, MA', details: '' },
  { month: 'AUG', day: '03', location: 'Philadelphia, PA', details: '[Sold Out]' },
  { month: 'SEP', day: '15', location: 'Chicago, IL', details: '' },
  { month: 'SEP', day: '16', location: 'Chicago, IL', details: '[Late Show]' },
  { month: 'OCT', day: '10', location: 'Nashville, TN', details: '' },
  { month: 'OCT', day: '11', location: 'Atlanta, GA', details: '' },
];
---

<BaseLayout pageTitle={pageTitle}>
  <h1>UPCOMING</h1>
  <div class='shows-container'>
    {shows.map(show => (
      <div class='show-row'>
        <div class='show-date'>
          <span>{show.month}</span>
          <span>{show.day}</span>
        </div>
        <div class='show-info'>
          <div class='show-location'>{show.location}</div>
          <div class='show-details'>{show.details}</div>
        </div>
        <button>More Info</button> 
      </div>
    ))}
  </div>
</BaseLayout>

<style>
  h1 {
    text-align: center;
    color: var(--color-accent-primary);
    font-size: 48px;
    font-family: 'Averia Serif Libre';
    margin-top: 60px;
  }

  .shows-container {
    width: 920px;
    padding: 40px;
    margin-bottom: 60px;
  }

  .show-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
  }

  .show-row:not(:last-child) {
  border-bottom: 1px solid rgba(255, 248, 225, 0.2);
  }

  .show-date {
    color: var(--color-accent-primary);
    flex-basis: 100px;
  }

  .show-date span {
    display: block;
  }

  .show-date span:last-child {
    font-size: 24px;
    font-weight: 500;
  }

  .show-info {
    display: flex;
    align-items: baseline;
    flex-grow: 1;
    margin-left: 60px;
  }

  .show-details {
    margin-left: 10px;
    color: rgba(255, 248, 225, 0.7);
  }

  button {
    padding: 8px 12px;
    border-radius: 4px;
    background-color: transparent;
    color: var(--color-app-white);
    border: 1px solid var(--color-app-white);
    font-size: 14px;
    cursor: pointer;
    font-weight: 500;
    opacity: 0.4;
    transition: opacity var(--elastic-duration) var(--elastic-timing);
  }

  button:hover {
    opacity: 1;
  }
</style>
