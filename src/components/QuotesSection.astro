<style>
  .quotes-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 60px;
    padding: 80px 20px;
    width: 100%;
    background-color: var(--color-background-section-mid);
    color: var(--color-text-inverse);
  }

  .quote-container {
    text-align: center;
    max-width: 800px;
    opacity: 0; /* start hidden for animation */
  }

  .quote-text {
    font-size: 2rem;
    font-style: italic;
    margin-bottom: 1rem;
    text-wrap: balance;
  }

  .quote-author {
    font-size: 1.2rem;
    font-weight: bold;
  }

  /* staggered animation */
  .quotes-section.is-visible .quote-container:nth-child(1) {
    animation: fadeInUp 1s forwards;
  }
  .quotes-section.is-visible .quote-container:nth-child(2) {
    animation: fadeInUp 1s forwards 0.3s;
  }
  .quotes-section.is-visible .quote-container:nth-child(3) {
    animation: fadeInUp 1s forwards 0.6s;
  }
</style>

<script>
  import { setupIntersectionObserver } from '../scripts/intersection-observer.js';

  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('.quotes-section');

    const observer = setupIntersectionObserver((target: Element) => {
      target.classList.add('is-visible');
    });

    if (section) {
      observer.observe(section);
    }
  });
</script>