---
import { Image } from 'astro:assets';
import tommyPhoto from '../assets/tommy-removebg-cropped.png';

const heroTextSize = '140px';
---

<section>
  <div class='hero-text-container'>
    <div class='hero-text fade-up'>TOMMY ZUGELL</div>
  </div>
  <Image class='tommy-photo' src={tommyPhoto} alt='Tommy photo' />
</section>

<style define:vars={{ heroTextSize }}>
  section {
    height: 56%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
    position: relative;
    width: 100%;
    border-bottom: 1px solid var(--color-accent-primary);
  }
  
  .hero-text-container {
    position: absolute;
    z-index: 0;
    bottom: 414px;
    left: 50%;
    transform: translate(-50%, 0);
  }

  .hero-text {
    color: var(--color-accent-primary);
    font-family: 'Averia Serif Libre', serif;
    font-size: var(--heroTextSize);
    line-height: var(--heroTextSize);
    text-align: center;
    margin: 0;
    font-weight: bold;
    white-space: nowrap;
  }

  .tommy-photo {
    position: relative;
    z-index: 1;
    display: block;
    object-fit: contain;
    object-position: 50% 50%;
    max-width: 100%;
    height: auto;
  }
</style>