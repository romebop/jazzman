---
import Carousel from '../components/Carousel';
import photo1 from '../assets/photo1.jpg';
import photo2 from '../assets/photo2.jpg';
import photo3 from '../assets/photo3.jpg';
import photo4 from '../assets/photo4.jpg';
import photo5 from '../assets/photo5.jpg';

const slides = [
  { src: photo1.src, text: 'Vitae Luna Fest', date: new Date(2024, 6, 5) },
  { src: photo2.src, text: 'Orbis Sound Gala', date: new Date(2024, 10, 4) },
  { src: photo3.src, text: 'Natura Vox Night', date: new Date(2023, 10, 18) },
  { src: photo4.src, text: 'Lumen Art Fair', date: new Date(2023, 10, 17) },
  { src: photo5.src, text: 'Civitas Dream Jam', date: new Date(2023, 9, 12) },
];
---

<section>
  <Carousel client:idle slides={slides} />
</section>

<style>
  section {
    background-color: var(--color-background-secondary);
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>