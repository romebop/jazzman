<html lang='en'>
  <head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' href='/favicon.ico' />
    <link rel='preload' href='/fonts/bitter-regular.woff2' as='font' type='font/woff2' crossorigin>
    <link rel='preload' href='/fonts/averia-serif-libre-700.woff2' as='font' type='font/woff2' crossorigin>
    <link rel='preload' href='/fonts/bitter-300.woff2' as='font' type='font/woff2' crossorigin>
    <link rel='preload' href='/fonts/bitter-500.woff2' as='font' type='font/woff2' crossorigin>
